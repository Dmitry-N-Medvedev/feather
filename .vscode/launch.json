  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Auth Server",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "cwd": "${workspaceFolder}/sources/back-end/servers/AuthServer",
      "program": "${workspaceFolder}/sources/back-end/servers/AuthServer/node_modules/mocha/bin/_mocha",
      "args": [
        "--bail",
        "true",
        "--timeout",
        "0",
        "specs/AuthServer.spec.mjs"
      ],
      "envFile": "${workspaceFolder}/sources/back-end/servers/AuthServer/.env",
      "console": "integratedTerminal",
      "internalConsoleOptions": "openOnSessionStart"
    }
  ]
}